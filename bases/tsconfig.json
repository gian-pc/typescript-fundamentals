    "module": "commonjs", // Sistema de módulos estándar de Node.js
    "sourceMap": true, // Genera archivos .map para debugging
    "removeComments": true, // Elimina comentarios del JS compilado
    "strict": true, // Activa todas las verificaciones estrictas de TypeScript
    /* ========== Opciones avanzadas (comentadas para aprendizaje) ========== */
