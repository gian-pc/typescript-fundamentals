    // "outDir": "./dist",     // Carpeta de salida para archivos JS compilados
    // "noImplicitReturns": true,         // Obliga a retornar en todas las ramas
    // "noUnusedLocals": true,            // Alerta sobre variables no usadas
    // "noUnusedParameters": true,        // Alerta sobre parámetros no usados
    // "noFallthroughCasesInSwitch": true, // Previene olvidos de 'break' en switch
    // "declaration": true,               // Genera archivos .d.ts (para librerías)
    // "skipLibCheck": true,              // Salta verificación en node_modules (más rápido)
  }
}